---
import Layout from '../layouts/Layout.astro';
import config from '../config';

const { brandName, introduction, skills, projects, socials } = config;
---

<Layout title="KHOI | My Page">  
        <section id="hero-section">
          <div class="container">
            <a id="open-to-work" href="https://www.linkedin.com/in/khoiuna/" target="_blank">Khoi is #OpenToWork!</a>
            <h2 id="hero-title">Hi. I am {brandName}.</h2>

            <div class="footer-container social-icons-container">
              {socials.map(item => (
                <a target="_blank" rel="noopener noreferrer" href={item.link}>
                  <i class={item.icon + " social-icons"} />
                </a>
              ))}
            </div>

            <button id="read-more">
              <i style="font-size: 2rem; color:#fff;" class="fa-solid fa-angles-down fa-beat" />
            </button>
          </div>
        </section>

        <section class="sections" id="introduction">
          <div class="container">
            <h2 class="title">Who am I</h2>

            <div style="display: flex; justify-content: center">
              <div class="flex-container">
                <div id="introduction-img-container">
                  <img src="/images/ava.webp" alt="Khoi Nguyen" />
                </div>
                <div id="introduction-description-container">
                  <p class="paragraph" id="introduction-description">
                    <Fragment set:html={introduction} />
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <div class="parallax" id="parallax-skills"></div>

        <section class="sections" id="skills">
          <div class="container">
            <h2 class="title">Skills</h2>

            <div id="skills-container" class="flex-container">
             {skills.map(item => (
                <div class="skills-flex">
                  <span class="iconify skill-icons" data-icon={item.icon}/>
                  <p class="small-paragraph">{item.name}</p>
                </div>
             ))}
            </div>
          </div>
        </section>

        <div class="parallax" id="parallax-projects"></div>

        <section class="sections" id="projects">
          <div class="container">
            <h2 class="title">Projects</h2>

            <div class="project-cards-container">
              {projects.map(({title, description, link, image}) => (
                <div class="project-cards">
                  <p class="project-cards-title">{title}</p>
                  
                  <div class="image-container">
                    <img src={image} alt={ title + ' | ' + description } />
                  </div>

                  <p class="small-paragraph">{description}</p>
                  <a class="paragraph" href={link} target="_blank" rel="noopener noreferrer">Check it out</a>
                </div>
              ))}
            </div>
          </div>
        </section>
</Layout>
